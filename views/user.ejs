<!DOCTYPE html>
<html lang="en">
  <head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Profile | <%= username %></title>

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/user.css" type="text/css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <!-- Fonts -->
     <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed:300,300i,700,700i" rel="stylesheet">

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/client-functions.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.bundle.min.js" integrity="sha384-pjaaA8dDz/5BgdFUPX6M/9SUZv4d12SUPF0axWc+VRZkx5xU3daN+lYb49+Ax+Tl" crossorigin="anonymous"></script>

  </head>

  <header>
    <% include partials/_navbar %>
  </header>

  <body>
    
    <% if (user && resource.length !== 0 && user.id === resource[0].user_id) { %>
      <img src="<%= user.avatar %>">
    <div class="greeting">
      <h1>Hello <%= username %>!</h1>
      <a href='/users/<%=username%>/settings'>Edit Your Profile</a>
    </div>

    <div class="created-resource">
      <h3><%= username %>'s Resources</h3>
        <% resource.forEach(function(element, i) { %>
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= element.title %></h5>
              <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
              <p class="card-text"><%= element.description %></p>
              <a href="<%= element.url %>" class="url"><%= element.url %></a>
            </div>
          </div>
        <% }); %>
      </div>
  
      <div class="liked-resource">
      <h3><%= username %>'s Liked Resources</h3>
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title">Card title</h5>
            <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            <a href="#" class="card-link">Card link</a>
          </div>
        </div>
        </div>

    <% } else { %>
    <div class="greeting">
      <h1>Welcome to <%= username %>'s Profile</h1>
    </div>

    <div class="created-resource">
    <h3><%= username %>'s Resources</h3>
      <% resource.forEach(function(element, i) { %>
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= element.title %></h5>
            <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
            <p class="card-text"><%= element.description %></p>
            <a href="<%= element.url %>" class="url"><%= element.url %></a>
          </div>
        </div>
      <% }); %>
    </div>

    <div class="liked-resource">
    <h3><%= username %>'s Liked Resources</h3>
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title">Card title</h5>
          <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
          <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
          <a href="#" class="card-link">Card link</a>
        </div>
      </div>
      </div>
    <% } %>
  </body>
</html>


