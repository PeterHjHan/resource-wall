     <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed:300,300i,700,700i" rel="stylesheet">

      <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
      <script type="text/javascript" src="/scripts/client-functions.js"></script>
      <script type="text/javascript" src="/scripts/resources.js"></script>
      <script type="text/javascript" src="/scripts/likes.js"></script>
      <script type="text/javascript" src="/scripts/ratings.js"></script>

      <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.bundle.min.js" integrity="sha384-pjaaA8dDz/5BgdFUPX6M/9SUZv4d12SUPF0axWc+VRZkx5xU3daN+lYb49+Ax+Tl" crossorigin="anonymous"></script>


  </head>

  <header>
    <% include partials/_navbar %>
  </header>

  <body>
    <% if (user && user.id === resource[0].resource_user_id) { %>

      <section class="resource-container">
        <form method="POST" action="/resources/<%= resource[0].topic_id %>/update"></form>
        <h2>Update Title</h2>
        <input class="edit-text" type='text' name="title" placeholder="<%= resource[0].resource_title %>">
        <br>
        <br>
        <h2>Update Description</h2>
        <textarea class="description" placeholder="<%= resource[0].resource_description %>"></textarea>
        <br>
        <br>
        <h2>Update Link</h2>
        <input class="edit-text" type='text' name ="url" placeholder="<%= resource[0].resrouce_url %>">
        <br>
        <br>
        <h2>Topic: #<%= resource[0].topic %></h2>
        <select name ="topic" class="select-topics">
        </select>
        <br>
        <br>
      </section>

      <div class="ratings">
        <h2>Rating</h2>
        <i class="far fa-star" id='1'></i>
        <i class="far fa-star" id='2'></i>
        <i class="far fa-star" id='3'></i>
        <i class="far fa-star" id='4'></i>
        <i class="far fa-star" id='5'></i>
      </div>

      <div class="likes">
      <h2>Like</h2>
        <!-- <form method="POST" actions="/resources/:id/like"> -->
        <i class="far fa-heart like"></i>
        <!-- </form> -->
      </div>

      <div class="button-container">
        <form method="POST" action="/resources/new">
          <button class="btn btn-outline-secondary" name="update" type="submit">Update</button>
        </form>
        <br>
        <br>
        <form method="POST" action="/resources/<%= resource[0].resource_id%>/delete">
          <button class="btn btn-outline-secondary"  name="delete" type="submit">Delete</button>
        </form>
      </div>
      <br>
      <br>
      <br>
      
      <section class="comment-container">
        <h3>Comments</h3>
          <article>
            <form method="POST" action="/resources/:id">
              <div class="comment-body">
                  <img class="comment-avatar" src="http://getdrawings.com/images/board-game-drawing-11.png">
                  <br>  
                  <h5 class="comment-user"><%= resource[0].comment.substr([0],[4]) %></h5>
                    <br>
                    <%= resource[0].comment.substr([6]) %>
                </div>
              <textarea class="form-control" placeholder="Leave a comment..."></textarea>
              <button class="btn btn-outline-secondary" name="comment" type="submit">Comment</button>
            </form>
          </article>
        </section>


    <% } else if (user) { %>
      <section class="resource-container">
          <h2>Title: <%= resource[0].resource_title %></h2>
          <br>
          <h2>Description</h2>
          <p><%= resource[0].resource_description %></p>
          <br>
          <h4>Link</h4>
          <p><a href="<%= resource[0].resrouce_url %>"><%= resource[0].resrouce_url %></a></p>
          <br>
          <br>
          <h4>Topics | #<%= resource[0].topic %></h4>
          </select>
          <br>
        </section>

        <div class="ratings">
          <h4>Rating</h4>
          <i class="far fa-star rating" name="1" res="<%= resource[0].resource_id%>"></i>
          <i class="far fa-star rating" name="2" res="<%= resource[0].resource_id%>"></i>
          <i class="far fa-star rating" name="3" res="<%= resource[0].resource_id%>"></i>
          <i class="far fa-star rating" name="4" res="<%= resource[0].resource_id%>"></i>
          <i class="far fa-star rating" name="5" res="<%= resource[0].resource_id%>"></i>
        </div>

        <div class="likes">
        <h4>Like</h4>

          <!-- <form method="POST" actions="/resources/:id/like"> -->
          <i class="far fa-heart like"></i>
          <!-- </form> -->
        </div>
        <section class="comment-container">
          <h3>Comments</h3>
            <article>
              <form method="POST" action="/resources/:id">
                <div class="comment-body">
                    <img class="comment-avatar" src="http://getdrawings.com/images/board-game-drawing-11.png">
                    <br>  
                    <h5 class="comment-user"><%= resource[0].comment.substr([0],[4]) %></h5>
                      <br>
                      <%= resource[0].comment.substr([6]) %>
                  </div>
                <textarea class="form-control" placeholder="Leave a comment"></textarea>
                <button class="btn btn-outline-secondary" name="comment" type="submit">Comment</button>
              </form>
            </article>
          </section>

    <% } else { %>
      <section class="resource-container">
          <h2>Title: <%= resource[0].resource_title %></h2>
          <br>
